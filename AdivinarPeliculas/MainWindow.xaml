<Window x:Class="AdivinarPeliculas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pestañas="clr-namespace:AdivinarPeliculas.pestañas"
        mc:Ignorable="d"
        Title="Adivinar películas" 
        MinHeight="450" MinWidth="700"
        Icon="recursos/AdivinarPeliculasPinguino.ico"
        Background="LightBlue">
    <TabControl Margin="5">
        <TabItem Header="Jugar">
            <pestañas:AdivinarPeliculas x:Name="jugar"></pestañas:AdivinarPeliculas>
        </TabItem>
        <TabItem Header="Gestionar">
            <pestañas:GestionarPeliculas x:Name="gestionar"></pestañas:GestionarPeliculas>
        </TabItem>
    </TabControl>
</Window>
